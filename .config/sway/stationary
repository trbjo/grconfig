workspace 1 output DP-1
workspace 2 output DP-1
workspace 3 output DP-1
workspace 4 output DP-2
workspace 5 output DP-2
workspace 6 output DP-2

bindsym --no-repeat ctrl+2 workspace 1
bindsym --no-repeat ctrl+3 workspace 2
bindsym --no-repeat ctrl+4 workspace 3
bindsym --no-repeat ctrl+7 workspace 4
bindsym --no-repeat ctrl+8 workspace 5
bindsym --no-repeat ctrl+9 workspace 6

# move focused container to workspace
bindsym --no-repeat ctrl+Shift+2 move container to workspace 1; workspace 1; fullscreen disable
bindsym --no-repeat ctrl+Shift+3 move container to workspace 2; workspace 2; fullscreen disable
bindsym --no-repeat ctrl+Shift+4 move container to workspace 3; workspace 3; fullscreen disable
bindsym --no-repeat ctrl+Shift+7 move container to workspace 4; workspace 4; fullscreen disable
bindsym --no-repeat ctrl+Shift+8 move container to workspace 5; workspace 5; fullscreen disable
bindsym --no-repeat ctrl+Shift+9 move container to workspace 6; workspace 6; fullscreen disable


bindsym --no-repeat $alt+l output DP-1 disable
bindsym --no-repeat $alt+shift+l output DP-1 enable


#
## Output
#
output 'Goldstar Company Ltd LG UltraFine 909NTWG7R817' resolution 3840x2160 pos 0 0 scale 2 subpixel rgb bg ~/pic/Baggrunde/badebro.jpg stretch
output 'Goldstar Company Ltd LG UltraFine 907NTUWBA398' resolution 3840x2160 pos 0 0 scale 2 subpixel rgb bg ~/pic/Baggrunde/badebro.jpg stretch


exec waybar
exec /usr/bin/swayidle\
    timeout 300 'swaymsg "output * dpms off"'\
    resume 'swaymsg "output * dpms on"'\
    timeout 10000 'systemctl suspend'
