set $ws2 workspace "2"
set $ws3 workspace "3"
set $ws7 workspace "7"
set $ws8 workspace "8"
set $ws9 workspace "9"

$ws2 output DP-1
$ws3 output DP-1
$ws7 output DP-2
$ws8 output DP-2
$ws9 output DP-2

bindsym --no-repeat ctrl+2 $ws2
bindsym --no-repeat ctrl+3 $ws3
bindsym --no-repeat ctrl+7 $ws7
bindsym --no-repeat ctrl+8 $ws8
bindsym --no-repeat ctrl+9 $ws9

# move focused container to workspace
bindsym --no-repeat ctrl+Shift+2 move container to $ws2; $ws2; fullscreen disable
bindsym --no-repeat ctrl+Shift+3 move container to $ws3; $ws3; fullscreen disable
bindsym --no-repeat ctrl+Shift+7 move container to $ws7; $ws7; fullscreen disable
bindsym --no-repeat ctrl+Shift+8 move container to $ws8; $ws8; fullscreen disable
bindsym --no-repeat ctrl+Shift+9 move container to $ws9; $ws9; fullscreen disable


bindsym --no-repeat $alt+l output DP-1 disable
bindsym --no-repeat $alt+shift+l output DP-1 enable


#
## Output
#

output 'Goldstar Company Ltd LG UltraFine 909NTWG7R817' resolution 3840x2160 pos 0 0 scale 2 subpixel rgb
output 'Goldstar Company Ltd LG UltraFine 907NTUWBA398' resolution 3840x2160 pos 1921 0 scale 2 subpixel rgb

exec /usr/bin/swayidle\
    timeout 300 'swaymsg "output * dpms off"'\
    resume 'swaymsg "output * dpms on"'\
    timeout 10000 'systemctl suspend'
